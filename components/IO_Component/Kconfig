        bool "PIN_1" 
    config PRESSED_SWITCH_4_PIN_2
        bool "PIN_2" 
    config PRESSED_SWITCH_4_PIN_3
        bool "PIN_3" 
    config PRESSED_SWITCH_4_PIN_4

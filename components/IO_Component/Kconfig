        bool "PIN_4" 
    config PRESSED_SWITCH_3_PIN_5
        bool "PIN_5" 
    config PRESSED_SWITCH_3_PIN_6
        bool "PIN_6" 
    config PRESSED_SWITCH_3_PIN_7
        bool "PIN_7" 

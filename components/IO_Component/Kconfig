menu "IO component"

config IO_COMPONENT_INCLUDED
    bool "add input output component to the system"
    default y

menu "Input Handler" 
    config ON_OFF_INPUT_HANDLER
    bool "add on off input handler"
    depends on IO_COMPONENT_INCLUDED
    default n

    config PRESSED_INPUT_HANDLER
    bool "add pressed input handler"
    depends on IO_COMPONENT_INCLUDED
    default n

menu "On off input handler" # inside input handler menu
    depends on ON_OFF_INPUT_HANDLER

    
endmenu # end of on off input handler menu
menu "pressed input handler" # inside input handler menu
    depends on PRESSED_INPUT_HANDLER

    config MAX_NUMBER_OF_PRESSED_SWITCHES
    int "maximum number of pressed input"
    range 1 6
    default 3
    help 
        choose the maximum number of pressed input

if MAX_NUMBER_OF_PRESSED_SWITCHES >= 2
    config USE_SWITCH_2_CONFIG
    bool 
    default y
endif
if MAX_NUMBER_OF_PRESSED_SWITCHES >= 3
    config USE_SWITCH_3_CONFIG
    bool
    default y
endif
if MAX_NUMBER_OF_PRESSED_SWITCHES >= 4
    config USE_SWITCH_4_CONFIG
    bool
    default y
endif
if MAX_NUMBER_OF_PRESSED_SWITCHES >= 5
    config USE_SWITCH_5_CONFIG
    bool
    default y
endif
if MAX_NUMBER_OF_PRESSED_SWITCHES >= 6
    config USE_SWITCH_6_CONFIG
    bool
    default y
endif
    
    choice 
        prompt "Select pressed switch 1 pin"
        default NON
    config PRESSED_SWITCH_1_PIN_0
        bool "PIN_0" 
    config PRESSED_SWITCH_1_PIN_1
        bool "PIN_1" 
    config PRESSED_SWITCH_1_PIN_2
        bool "PIN_2" 
    config PRESSED_SWITCH_1_PIN_3
        bool "PIN_3" 
    config PRESSED_SWITCH_1_PIN_4
        bool "PIN_4" 
    config PRESSED_SWITCH_1_PIN_5
        bool "PIN_5" 
    config PRESSED_SWITCH_1_PIN_6
        bool "PIN_6" 
    config PRESSED_SWITCH_1_PIN_7
        bool "PIN_7" 
    config PRESSED_SWITCH_1_PIN_8
        bool "PIN_8" 
    config PRESSED_SWITCH_1_PIN_9
        bool "PIN_9"
    endchoice

    choice 
        depends on USE_SWITCH_2_CONFIG
        prompt "Select pressed switch 2 pin"
        default NON
    config PRESSED_SWITCH_2_PIN_0
    bool "PIN_0" 
    config PRESSED_SWITCH_2_PIN_1
        bool "PIN_1" 
    config PRESSED_SWITCH_2_PIN_2
        bool "PIN_2" 
    config PRESSED_SWITCH_2_PIN_3
        bool "PIN_3" 
    config PRESSED_SWITCH_2_PIN_4
        bool "PIN_4" 
    config PRESSED_SWITCH_2_PIN_5
        bool "PIN_5" 
    config PRESSED_SWITCH_2_PIN_6
        bool "PIN_6" 
    config PRESSED_SWITCH_2_PIN_7
        bool "PIN_7" 
    config PRESSED_SWITCH_2_PIN_8
        bool "PIN_8" 
    config PRESSED_SWITCH_2_PIN_9
        bool "PIN_9" 
    endchoice

    choice 
    depends on USE_SWITCH_3_CONFIG

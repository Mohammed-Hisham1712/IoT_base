config NUMBER_OF_PRESSED_TO_PIN_DRIVEN_OUTPUT
    int "number of pin driven handler"
    default 1
    range 1 6
    help 
        choose number of used pin driven handler in your system
#Define number of pins
if NUMBER_OF_PRESSED_TO_PIN_DRIVEN_OUTPUT >= 1
config PRESSED_TO_PIN_SWITCH_1_NUM
int "enter switch 1 process num "
default -1
range 0 5 
help 
    enter switch 1 process num.

config PRESSED_TO_PIN_PIN_1_NUM
int "enter pin driven 1 process num "
default -1
range 0 5 
help 
    enter PIN 1 process num.
endif

